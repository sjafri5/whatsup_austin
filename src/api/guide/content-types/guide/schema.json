{
  "kind": "collectionType",
  "collectionName": "guides",
  "info": {
    "singularName": "guide",
    "pluralName": "guides",
    "displayName": "Guide",
    "description": "Editorial guides about Austin: food, comedy, nightlife, neighborhoods, events"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "summary": {
      "type": "text"
    },
    "content": {
      "type": "richtext"
    },
    "guideType": {
      "type": "enumeration",
      "enum": [
        "list",
        "explainer",
        "review",
        "roundup",
        "feature"
      ]
    },
    "image": {
      "type": "media",
      "multiple": false
    },
    "places": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::place.place",
      "inversedBy": "guides"
    },
    "neighborhoods": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::neighborhood.neighborhood"
    }
  }
}

