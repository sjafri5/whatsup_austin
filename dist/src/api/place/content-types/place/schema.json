{
    "kind": "collectionType",
    "collectionName": "places",
    "info": {
        "singularName": "place",
        "pluralName": "places",
        "displayName": "Place",
        "description": "A business, venue, food truck, comedy club, or interesting spot in Austin"
    },
    "options": {
        "draftAndPublish": true
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "type": {
            "type": "enumeration",
            "enum": [
                "comedy_club",
                "food_truck",
                "restaurant",
                "bar",
                "venue",
                "event_space",
                "other"
            ]
        },
        "shortDescription": {
            "type": "text"
        },
        "description": {
            "type": "richtext"
        },
        "website": {
            "type": "string"
        },
        "instagram": {
            "type": "string"
        },
        "googleMapsUrl": {
            "type": "string"
        },
        "address": {
            "type": "string"
        },
        "image": {
            "type": "media",
            "multiple": false
        },
        "isFeatured": {
            "type": "boolean",
            "default": false
        },
        "neighborhood": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::neighborhood.neighborhood"
        },
        "guides": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::guide.guide"
        }
    }
}
